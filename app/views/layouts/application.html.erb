<!DOCTYPE html>
<html>
<head>
  <title>P2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div id="header">
      <div class="logo">

          <%= link_to image_tag('logo1.png'), root_path %>
      </div>
      <div class="user_options">
        <ul>
          <li><%=  link_to 'Inicio', root_path %></li>
          <li>
            <%if signed_in? %>
                <%= link_to "Perfil" ,user_path(get_id)%>
            <%end%>
          </li>
          <li><%if signed_in? %>
                <%= link_to 'Salir','/sessions/destroy' %>
            <% else %>
                <%=  link_to 'Entrar','/sessions/index'%>
            <% end %>
          </li>
        </ul>
      </div>

    </div>
    <div id="content">
      <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value.capitalize %></div>
      <%  end %>
       <%= yield %>
      <div style="clear: both;"></div>
    </div>
    <div id="footer">
        <div class="footer left">
          <ul>
            <li><%= link_to 'Acerca del proyecto','/pages/about' %></li>

          </ul>
        </div>
        <div class="footer right">
          Desarrollado por
          <ul>
            <li> Hugo </li>
            <li> Jonathan</li>

          </ul>
        </div>

    </div>



</body>
</html>
